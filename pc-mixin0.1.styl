@import 'common-mixin.styl'

bg(_image, _properties = no-repeat)
	w = image-size(_image)[0]
	h = image-size(_image)[1]
	background url(_image) _properties

img(_image, _properties = no-repeat, _display = block)
	display _display
	width w = image-size(_image)[0]
	height h = image-size(_image)[1]
	overflow hidden
	text-indent -9999px
	bg(_image, _properties)

aimg(_image, _opacity = 0.6, _properties = no-repeat, _display = block)
	img(_image, _properties, _display)
	&:hover
		opacity(_opacity)

fimg(_image, _opacity = 0, _duration = 0.3s, _properties = no-repeat, _display = block)
	img(_image, _properties, _display)
	&:hover
		opacity _opacity
		transition _opacity _duration linear

btn(_image, _properties = no-repeat, _display = block)
	display _display
	width w = image-size(_image)[0]
	height h = image-size(_image)[1]*0.5
	a
		display _display
		width w
		height h
		overflow hidden
		background url(_image) _properties
		text-indent -9999px
		&:hover
			background-position 0 h*-1

abtn(_image, _opacity = 1.0, _properties = no-repeat, _display = block)
	btn(_image, _properties, _display)
	a
		&:hover
			opacity(_opacity)

fbtn(_image, _duration = 0.3s, _opacity = 1, _properties = no-repeat, _display = block)
	btn(_image, _properties, _display)
	background url(_image) _properties
	a
		opacity 0
		transition opacity _duration linear
		&:hover
			opacity _opacity
			transition opacity _duration linear

sbtn(_image, _duration = 0.1s, _scale = 1.1, _properties = no-repeat, _display = block)
	btn(_image, _properties, _display)
	background url(_image) _properties
	a
		transform scale(1)
		transition all _duration linear
		&:hover
			transform scale(_scale)
			transition all _duration linear
			background-position 0 0