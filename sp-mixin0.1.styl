
inline-block()
	display -moz-inline-stack
	display inline-block
	vertical-align middle
	zoom 1

c() 
	margin 0 auto

tl(_top = 0, _left = 0)
	position absolute
	top _top
	left _left

tr(_top = 0, _right = 0)
	position absolute
	top _top
	right _right

bl(_bottom = 0, _left = 0)
	position absolute
	bottom _bottom
	left _left

br(_bottom = 0, _right = 0)
	position absolute
	bottom _bottom
	right _right

mmw(_min-width, _max-width)
	max-width _max-width
	min-width _min-width
	width auto !important
	width min-width

bg(_image, _properties = )
	w = image-size(_image)[0]*0.5
	h = image-size(_image)[1]*0.5
	background url(_image) _properties
	background-size w h

img(_image, _properties = , _display = block)
	display _display
	width w = image-size(_image)[0]*0.5
	height h = image-size(_image)[1]*0.5
	background url(_image) _properties
	background-size w h
	overflow hidden
	text-indent -9999px

btn(_image, _display = block)
	display _display
	width w = image-size(_image)[0]*0.5
	height h = image-size(_image)[1]*0.25
	a
		display _display
		width w
		height h
		overflow hidden
		background url(_image) no-repeat
		background-size w h*2
		text-indent -9999px
		&:hover
			background-position 0 h*-1

abtn(_image, _opacity = 0.6, _properties = , _display = block)
	display _display
	width w = image-size(_image)[0]*0.5
	height h = image-size(_image)[1]*0.5
	a
		display _display
		width w
		height h
		overflow hidden
		background url(_image) no-repeat
		background-size w h
		text-indent -9999px
		&:hover
			opacity(_opacity)

